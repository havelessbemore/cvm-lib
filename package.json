{
  "$schema": "http://json.schemastore.org/package",
  "name": "cvm",
  "version": "0.0.1",
  "description": "",
  "license": "MIT",
  "author": "Michael Rojas <dev.michael.rojas@gmail.com> (https://github.com/havelessbemore)",
  "homepage": "https://github.com/havelessbemore/cvm",
  "bugs": "https://github.com/havelessbemore/cvm/issues",
  "sideEffects": false,
  "engines": {
    "node": ">= 18"
  },
  "type": "module",
  "exports": "./src/index.ts",
  "publishConfig": {
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.cjs",
        "types": "./dist/index.d.ts"
      }
    }
  },
  "keywords": [
    "algorithm",
    "cvm",
    "distinct elements problem",
    "estimate",
    "estimation problem",
    "estimator",
    "sampling",
    "sketching",
    "streaming",
    "unique"
  ],
  "scripts": {
    "build": "rimraf dist && tsc && rollup -c",
    "build:docs": "typedoc",
    "format": "prettier . --write",
    "lint": "eslint .",
    "prepare": "husky",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:coverage": " NODE_OPTIONS=\"--experimental-vm-modules\" jest --collect-coverage"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "esbuild": "^0.21.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.3.0",
    "rimraf": "^5.0.7",
    "rollup": "^4.18.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-license": "^3.4.0",
    "ts-jest": "^29.1.4",
    "tsx": "^4.11.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.11.0"
  }
}
