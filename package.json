{
  "$schema": "http://json.schemastore.org/package",
  "name": "cvm-lib",
  "version": "0.1.1",
  "description": "Estimate the number of distinct values in a set using the simple and space-efficient CVM algorithm",
  "license": "MIT",
  "author": "Michael Rojas <dev.michael.rojas@gmail.com> (https://github.com/havelessbemore)",
  "homepage": "https://github.com/havelessbemore/cvm-lib",
  "bugs": "https://github.com/havelessbemore/cvm-lib/issues",
  "sideEffects": false,
  "engines": {
    "node": ">= 18"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/havelessbemore/cvm-lib.git"
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rimraf dist && tsc && rollup -c",
    "build:docs": "rimraf docs && typedoc",
    "format": "prettier . --write",
    "lint": "eslint .",
    "prepare": "husky",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:coverage": " NODE_OPTIONS=\"--experimental-vm-modules\" jest --collect-coverage"
  },
  "keywords": [
    "algorithm",
    "cardinality estimation",
    "count distinct",
    "cvm",
    "distinct",
    "estimate",
    "estimator",
    "sampling",
    "streaming",
    "unique"
  ],
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@types/node": "^20.14.11",
    "esbuild": "^0.23.0",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.8.0",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.18.1",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-license": "^3.5.2",
    "ts-jest": "^29.2.3",
    "tsx": "^4.16.2",
    "typedoc": "^0.26.4",
    "typedoc-plugin-markdown": "^4.2.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.1"
  },
  "overrides": {
    "eslint": "^9.7.0"
  }
}
